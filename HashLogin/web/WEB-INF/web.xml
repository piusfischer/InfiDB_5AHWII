<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <context-param>
        <param-name>DBUser</param-name>
        <param-value>root</param-value>
    </context-param>

    <context-param>
        <param-name>pwd</param-name>
        <param-value>root</param-value>
    </context-param>

    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost:3306/hashlogindb?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC</param-value>
    </context-param>

    <context-param>
        <param-name>DBdriver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>

    <listener>
        <listener-class>main.java.web.ApplContextListener</listener-class>
    </listener><servlet>
    <servlet-name>registration</servlet-name>
    <servlet-class>main.java.web.Registration</servlet-class>
</servlet>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>main.java.web.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>main.java.web.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>



</web-app>